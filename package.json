{
  "name": "agentsync-root",
  "private": true,
  "workspaces": [
    "npm/agentsync"
  ],
  "scripts": {
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "update-deps": "pnpm update -i -r --latest",
    "preinstall": "npx only-allow pnpm",
    "prepare": "node -e \"const {existsSync}=require('fs'); if (existsSync('.git')) { require('child_process').execSync('pnpm exec lefthook install && pnpm run agents:sync', {stdio:'inherit'}); }\"",
    "agents:sync": "pnpm exec agentsync apply",
    "agents:sync:clean": "pnpm exec agentsync apply --clean",
    "precommit": "pnpm exec agentsync apply --dry-run"
  },
  "devDependencies": {
    "@dallay/agentsync": "*",
    "@semantic-release/changelog": "*",
    "@semantic-release/exec": "*",
    "@semantic-release/git": "*",
    "@semantic-release/github": "*",
    "@semantic-release/npm": "*",
    "conventional-changelog-conventionalcommits": "*",
    "lefthook": "^2.0.15",
    "semantic-release": "*"
  },
  "packageManager": "pnpm@10.28.0"
}
